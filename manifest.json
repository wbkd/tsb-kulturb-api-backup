{
  "server": {
    "port": "$env.PORT",
    "routes": {
      "cors": {
        "origin": [
          "*"
        ],
        "additionalHeaders": ["cache-control", "x-requested-with", "authorization"]
      }
    },
    "cache": {
      "name": "cache",
      "engine": "catbox-memory"
    }
  },
  "register": {
    "plugins": [
      "hapi-boom-decorators",
      {
        "plugin": "hapi-rate-limitor",
        "options": {
          "redis": "$env.REDIS_URL",
          "namespace": "hapi-rate-limitor",
          "enabled": false
        }
      },
      {
        "plugin": "./src/email",
        "options": {
          "host": "$env.SMTP_HOST",
          "user": "$env.SMTP_USER",
          "pass": "$env.SMTP_PASS"
        }
      },
      {
        "plugin": "./src/db",
        "options": {
          "url": "$env.MONGODB_URI"
        }
      },
      {
        "plugin": "./src/json-ld",
        "options": {}
      },
      {
        "plugin": "./src/users",
        "routes": {
          "prefix": "/api/v1/users"
        },
        "options": {
          "admin": {
            "email": "$env.ADMIN_EMAIL",
            "password": "$env.ADMIN_PASSWORD"
          }
        }
      },
      {
        "plugin": "./src/organisations",
        "routes": {
          "prefix": "/api/v1/locations"
        }
      },
      {
        "plugin": "./src/files",
        "routes": {
          "prefix": "/api/v1/files"
        }
      },
      {
        "plugin": "./src/tags",
        "routes": {
          "prefix": "/api/v1/tags"
        }
      },
      {
        "plugin": "./src/changes",
        "routes": {
          "prefix": "/api/v1/changes"
        }
      },
      {
        "plugin": "hapi-pino",
        "options": {
          "prettyPrint": true,
          "redact": ["req.headers.authorization"]
        }
      },
      "inert",
      "vision",
      "hapi-swagger",
      "blipp"
    ]
  }
}
